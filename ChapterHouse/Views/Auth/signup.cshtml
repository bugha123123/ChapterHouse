@model ChapterHouse.Models.RegisterViewModel

@{
    ViewData["Title"] = "Sign Up";
}

<style>
    body {
        background: linear-gradient(180deg, rgba(34, 34, 34, 1) 0%, rgba(15, 15, 15, 1) 50%, rgba(68, 0, 0, 1) 100%);
        color: #ffcccc; /* Light Red Text for Contrast */
        font-family: 'Arial', sans-serif; /* Use a spooky font for a better effect */
    }

    h2 {
        text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.7); /* Adding shadow to the header */
    }

    .form-control {
        background-color: rgba(255, 255, 255, 0.1); /* Semi-transparent background */
        border: 1px solid #ff6666; /* Red border */
        color: #ffffff; /* White text */
    }

    .form-control:focus {
        background-color: rgba(255, 255, 255, 0.2); /* Darker semi-transparent on focus */
        border-color: #ffcccc; /* Light red border on focus */
        box-shadow: 0 0 5px #ff6666; /* Shadow effect on focus */
    }

    .btn-danger {
        background-color: #ff6666; /* Spooky Red */
        border-color: #cc0000; /* Darker Red */
    }

    .btn-danger:hover {
        background-color: #cc0000; /* Darker Red on hover */
        border-color: #990000; /* Even darker red on hover */
        box-shadow: 0 0 10px rgba(204, 0, 0, 0.5); /* Shadow effect on hover */
    }

    .text-danger {
        font-weight: bold;
    }

    .text-light {
        color: #ffffff; /* Light color for links */
    }
</style>

<div class="container mt-5">
    <h2 class="text-center text-danger">Join the Haunted Book Emporium</h2>
    <div class="row justify-content-center mt-5">
        <div class="col-md-6">
            <form asp-action="SignupUser" method="post" asp-controller="Auth" class="bg-dark p-4 rounded shadow">
               
                <div class="form-group mb-3">
                    <label asp-for="Email" class="form-label text-light">Email</label>
                    <input asp-for="Email" class="form-control text-white" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Password" class="form-label text-light">Password</label>
                    <input asp-for="Password" class="form-control text-white" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
              
                <button type="submit" class="btn btn-danger w-100">Sign Up</button>
            </form>
            <div class="mt-3 text-center">
                <a  class="text-light" asp-action="signin" asp-controller="Auth" >Already have an account? Login</a>
            </div>
        </div>
    </div>
</div>
