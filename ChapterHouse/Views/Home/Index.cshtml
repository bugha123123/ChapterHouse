@model List<Books>

<link href="https://fonts.googleapis.com/css2?family=Creepster&display=swap" rel="stylesheet">

<!-- Add Bootstrap and jQuery scripts (if not already included in your layout) -->
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
<style>
    .spooky-font {
        font-family: 'Creepster', cursive; /* Add a spooky Google font or custom font */
    }

    .card {
        border: none; /* Removes default card border */
        border-radius: 10px; /* Rounded corners */
    }

        .card:hover {
            transform: translateY(-5px); /* Lift effect on hover */
            transition: transform 0.2s; /* Smooth transition */
        }

    .card-img-top {
        border-top-left-radius: 10px; /* Match card radius */
        border-top-right-radius: 10px; /* Match card radius */
    }

    .carousel-item {
        transition: transform 0.5s ease, opacity 0.5s ease; /* Adjust as needed */
    }
</style>


<header class="mt-5 text-light py-4">
    <div class="container text-center">
        <h1 class="display-4 spooky-font">🕸️ Spooky Bookstore 🕸️</h1>
        <p class="lead">Where every page has a spine-tingling story waiting to haunt you...</p>
    </div>
</header>
<div class="container my-5">




    <div id="spookyBookCarousel" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            @for (int i = 0; i < Model.Count(); i += 3)
            {
                <div class="carousel-item @(i == 0 ? "active" : "")">
                    <div class="row">
                        @foreach (var book in Model.Skip(i).Take(3))
                        {
                            <div class="col-md-4 mb-4">
                                <div class="card h-100 spooky-font">
                                    <img src="@book.ImageURL" class="card-img-top" alt="@book.Title" style="height: 400px; object-fit: cover;">
                                    <div class="card-body d-flex flex-column">
                                        <h5 class="card-title">@book.Title</h5>
                                        <p class="card-text text-muted">by @book.Author</p>
                                        <div class="mt-auto">
                                            <form asp-action="AddBookToCart" asp-controller="Home" method="post">
                                                <input type="hidden" name="bookId" value="@book.Id" />
                                                <div class="d-flex justify-content-between align-items-center">
                                                    <div>
                                                        <button type="submit" class="btn btn-primary">Add to Cart</button>
                                                    </div>
                                                    <div>
                                                        <p class="card-text text-muted">Pages :  @book.PageCount</p>
                                                    </div>
                                                    
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            }
        </div>

        <a class="carousel-control-prev" href="#spookyBookCarousel" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#spookyBookCarousel" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>


</div>
