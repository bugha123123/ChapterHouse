<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ChapterHouse</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ChapterHouse.styles.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Nosifer&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet" asp-append-version="true">
</head>

<style>
    /* Spooky Navbar Styling */
    .navbar {
        background-color: #2e2e2e;
        border-bottom: 1px solid #800;
    }

    .navbar-brand, .nav-link {
        color: #ff6666 !important; /* Light Red */
    }

        .nav-link:hover {
            color: #ffcccc !important; /* Lighter Red */
            text-shadow: 1px 1px 5px #000; /* Glowing effect */
        }

    .navbar-toggler {
        border-color: #800; /* Dark Red */
    }

    .navbar-toggler-icon {
        background-color: #800; /* Dark Red */
    }

    .dropdown-menu {
        background-color: #2e2e2e; /* Dark Background */
        border: 1px solid #800; /* Dark Red Border */
    }

    .dropdown-item {
        color: #ff6666; /* Light Red */
    }

        .dropdown-item:hover {
            background-color: #800; /* Dark Red Hover */
            color: #ffcccc; /* Lighter Red */
            text-shadow: 1px 1px 5px #000; /* Glowing effect */
        }

    .nosifer-regular {
        font-family: "Nosifer", sans-serif;
        font-weight: 400;
        font-style: normal;
    }
</style>
<body>

    <nav class="navbar navbar-expand-lg ">
        <div class="container spooky-font">
            <a class="navbar-brand fw-bold nosifer-regular " asp-action="Index" asp-controller="Home">Haunted Book Emporium</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse " id="navbarNav">
                <ul class="navbar-nav ms-auto ">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" asp-action="Index" asp-controller="Home">Home</a>
                    </li>
                 

                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" asp-action="offers" asp-controller="Home"> Special Offers</a>
                    </li>
              
                    <li class="nav-item">
                        <a class="nav-link" asp-action="newarrivals" asp-controller="Home">New Arrivals</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Contact Us</a>
                    </li>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="profileDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end bg-dark text-light shadow-lg" aria-labelledby="profileDropdown">
                                <li>
                                    <a class="dropdown-item d-flex align-items-center text-light " asp-action="Cart" asp-controller="Home">
                                        <img src="https://img.icons8.com/material-outlined/24/ff6666/shopping-cart.png" alt="Cart" class="me-2" />
                                        <span>Cart</span>
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item d-flex align-items-center text-light " asp-action="wishlist" asp-controller="Home">


                                        <img src="https://img.icons8.com/material-outlined/24/ff6666/like.png" alt="Wishlist" class="me-2" />

                                        <span>WishList</span>
                                    </a>
                                </li>
                                <li>
                                    <hr class="dropdown-divider" />
                                </li>
                                <li>
                                    <a class="dropdown-item d-flex align-items-center text-light" asp-action="SignoutUser" asp-controller="Auth">
                                        
                                        <span>Log Out</span>
                                    </a>
                                </li>
                            </ul>
                        </li>


                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="btn btn-danger text-white" asp-action="signup" asp-controller="Auth" role="button">Sign Up</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <div class="container">
        <main role="main">
            @RenderBody()
        </main>
    </div>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
 
  
</body>
</html>
